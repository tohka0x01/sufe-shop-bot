# ====================================
# Telegram 机器人配置（必需）
# ====================================
# 从 Telegram 的 @BotFather 获取机器人令牌
BOT_TOKEN=your_telegram_bot_token_here

# 管理面板访问的认证令牌
ADMIN_TOKEN=your_secure_admin_token_here

# ====================================
# 数据库配置
# ====================================
# 数据库类型：sqlite 或 postgres
DB_TYPE=sqlite

# SQLite 配置（默认）
# 对于 SQLite，DB_NAME 是数据库文件路径
# 使用 ":memory:" 表示内存数据库（仅用于测试）
DB_NAME=shop.db

# PostgreSQL 配置
# 如果使用 PostgreSQL，请取消注释并配置以下选项
# DB_TYPE=postgres
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=shopbot
# DB_USER=postgres
# DB_PASSWORD=your_password_here
# DB_SSL_MODE=disable  # 选项：disable, require, verify-ca, verify-full

# 传统数据库连接字符串（高级用户）
# 如果设置，将覆盖上面的单独数据库设置
# DB_DSN=postgres://user:password@localhost:5432/shopbot?sslmode=disable

# ====================================
# Redis 配置（可选）
# ====================================
# Redis 用于缓存和会话管理
# 如果不使用 Redis，请保持注释状态

# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=
# REDIS_DB=0

# 传统 Redis URL（高级用户）
# 如果设置，将覆盖上面的单独 Redis 设置
# REDIS_URL=redis://localhost:6379/0

# ====================================
# 支付网关配置
# ====================================
# 易支付（彩虹支付）设置
# 如果不使用支付网关，请留空
EPAY_PID=your_epay_merchant_id
EPAY_KEY=your_epay_secret_key
EPAY_GATEWAY=https://pay.v8jisu.cn

# ====================================
# 应用程序设置
# ====================================
# 回调基础 URL（支付功能必需）
# 这应该是托管机器人的公共域名
BASE_URL=https://your-domain.com

# ====================================
# 可选设置
# ====================================

# 日志配置
# LOG_LEVEL=info  # 选项：debug, info, warn, error

# HTTP 服务器配置
# PORT=7832

# 指标配置
# METRICS_ENABLED=true
# METRICS_PORT=9090

# 请求追踪
# TRACE_HEADER=X-Request-ID

# 管理员通知
# ADMIN_TELEGRAM_ID=123456789  # 您的 Telegram 用户 ID
# ALERT_ON_NO_STOCK=true

# 速率限制
# RATE_LIMIT_ENABLED=true
# RATE_LIMIT_REQUESTS=100
# RATE_LIMIT_WINDOW=1m

# 文件上传设置
# MAX_UPLOAD_SIZE=10485760  # 10MB（字节）

# 会话配置
# SESSION_TIMEOUT=24h
# SESSION_SECRET=your_session_secret_here

# CORS 设置（用于 API 访问）
# CORS_ENABLED=false
# CORS_ORIGINS=https://admin.example.com

# ====================================
# 开发设置
# ====================================
# DEBUG=false
# PRETTY_LOGS=false

# ====================================
# Webhook 配置
# ====================================
# 用于 Telegram webhook 模式（轮询的替代方案）
# USE_WEBHOOK=false
# WEBHOOK_URL=https://your-domain.com
# WEBHOOK_PORT=9147